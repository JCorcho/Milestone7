<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/create_question_text"
        android:layout_width="410dp"
        android:layout_height="86dp"
        android:layout_marginTop="4dp"
        android:text="Are you sure you want to delete John Doe? This Cannot Be Undone"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/person_button"
        android:layout_width="148dp"
        android:layout_height="74dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:text="Delete"
        app:layout_constraintEnd_toStartOf="@+id/cancel_activity"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_question_text" />

    <Button
        android:id="@+id/cancel_activity"
        android:layout_width="148dp"
        android:layout_height="74dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="36dp"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_question_text" />

</androidx.constraintlayout.widget.ConstraintLayout>